<% layout("/layouts/boylerplate") -%>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-2">
            <h3>Edit Book Listing</h3>
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Please provide a book title.</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Please enter a short description.</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="listing[image]" value="<%= listing.image %>" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">Author</label>
                    <input type="text" name="listing[author]" value="<%= listing.author %>" class="form-control" required>
                    <div class="invalid-feedback">Please provide the author name.</div>
                </div>
                <div class="mb-3">
                    <label for="publisher" class="form-label">Publisher</label>
                    <input type="text" name="listing[publisher]" value="<%= listing.publisher %>" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="year" class="form-label">Year</label>
                    <input type="number" name="listing[year]" value="<%= listing.year %>" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" name="listing[genre]" value="<%= listing.genre %>" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" name="listing[quantity]" value="<%= listing.quantity %>" class="form-control" required>
                    <div class="invalid-feedback">Please provide a valid quantity.</div>
                </div>
                <div class="mb-3">
                    <label for="ISBN" class="form-label">ISBN</label>
                    <input type="text" name="listing[ISBN]" value="<%= listing.ISBN %>" class="form-control" required>
                    <div class="invalid-feedback">Please provide a valid ISBN number.</div>
                </div>
                <button class="btn btn-dark edit-btn mb-2">Edit</button>
            </form>
        </div>
    </div>
</body>
