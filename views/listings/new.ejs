<% layout("/layouts/boylerplate") -%>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-2">
            <h3>Create New Book Listing</h3>
            <form method="post" action="/listings" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter book title" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Please provide a book title.</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter a short description.</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="listing[image]" placeholder="Enter image URL/Link" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">Author</label>
                    <input type="text" name="listing[author]" placeholder="Enter author name" class="form-control" required>
                    <div class="invalid-feedback">Please provide the author name.</div>
                </div>
                <div class="mb-3">
                    <label for="publisher" class="form-label">Publisher</label>
                    <input type="text" name="listing[publisher]" placeholder="Enter publisher name" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="year" class="form-label">Year</label>
                    <input type="number" name="listing[year]" placeholder="Enter publication year" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" name="listing[genre]" placeholder="Enter book genre" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" name="listing[quantity]" placeholder="Enter quantity" class="form-control" required>
                    <div class="invalid-feedback">Please provide a valid quantity.</div>
                </div>
                <div class="mb-3">
                    <label for="ISBN" class="form-label">ISBN</label>
                    <input type="text" name="listing[ISBN]" placeholder="Enter ISBN number" class="form-control" required>
                    <div class="invalid-feedback">Please provide a valid ISBN number.</div>
                </div>
                <button class="btn btn-dark add-btn mb-2">Add</button>
            </form>
        </div>
    </div>
</body>
